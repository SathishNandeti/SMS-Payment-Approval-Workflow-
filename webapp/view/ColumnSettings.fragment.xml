<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idColumnSettingsDialog"
        title="Select Columns"
        contentWidth="400px"
        resizable="false"
        draggable="false"
    >
        <content>
            <List
                items="{columnModel>/columns}"
                mode="None"
            >
                <CustomListItem>
                    <HBox
                        justifyContent="SpaceBetween"
                        alignItems="Center"
                        class="sapUiSmallMarginBegin"
                    >
                        <Text text="{columnModel>label}" />
                        <CheckBox selected="{columnModel>visible}" />
                    </HBox>
                </CustomListItem>
            </List>
        </content>

        <beginButton>
            <Button
                text="Apply"
                type="Emphasized"
                press="onApplyColumnSettings"
            />
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                press="onCloseColumnSettings"
                type="Negative"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
